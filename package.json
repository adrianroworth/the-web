{
    "name": "texas-hold-em",
    "version": "0.1.0",
    "description": "Shows you your strongest hand in a game of Texas Hold'em poker",
    "main": "./src/index.js",
    "scripts": {
        "start": "node ./src/bin/www",
        "start:dev": "nodemon -L --inspect=0.0.0.0:9229 -e .js,.json,.njk,.yml,.scss --exec npm run build:dev",
        "start:prod": "npm run build",
        "pretest": "eslint .",
        "build:dev": "npm run sass:dev && npm run start",
        "build": "npm run sass && npm run start",
        "sass:dev": "node-sass ./src/css/ -o ./src/static/assets/css/",
        "sass": "node-sass ./src/css/ -o ./src/static/assets/css/ --output-style compressed",
        "test": "jest",
        "coverage": "jest --coverage"
    },
    "author": "Adrian Roworth",
    "license": "MIT",
    "devDependencies": {
        "eslint": "^5.16.0",
        "eslint-config-airbnb-base": "^13.1.0",
        "eslint-config-prettier": "^4.3.0",
        "eslint-plugin-import": "^2.17.2",
        "eslint-plugin-jest": "^22.5.1",
        "eslint-plugin-prettier": "^3.1.0",
        "husky": "^2.3.0",
        "jest": "^24.8.0",
        "jest-json-schema": "^2.0.2",
        "lint-staged": "^8.1.7",
        "node-sass": "^7.0.0",
        "nodemon": "^1.19.1",
        "speccy": "github:wework/speccy#740d19d88935db7735250c16abc2ad09256b5854",
        "supertest": "^4.0.2",
        "yamljs": "^0.3.0"
    },
    "dependencies": {
        "body-parser": "^1.18.3",
        "debug": "^4.1.1",
        "ejs": "^2.6.1",
        "express": "^4.16.4",
        "express-handlebars": "^3.0.2",
        "got": "^9.6.0",
        "json-schema-ref-parser": "^7.1.0",
        "lodash.merge": "^4.6.2",
        "path": "^0.12.7",
        "prettier": "^1.18.2",
        "swagger-ui-express": "^4.0.6",
        "the-transformer": "git+https://github.com/adrianroworth/the-transformer.git"
    }
}
